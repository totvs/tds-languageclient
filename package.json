{
  "name": "@totvs/tds-languageclient",
  "description": "TOTVS Language Client e Language Server Protocol",
  "displayName": "TOTVS Language Client",
  "version": "0.1.1",
  "publisher": "TOTVS",
  "author": {
    "name": "TOTVS",
    "email": "tecnologia@totvs.com.br"
  },
  "license": "Apache-2.0",
  "keywords": [
    "advPL",
    "4gl",
    "tds",
    "totvs",
    "lsp",
    "dap"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/totvs/tds-languageclient.git"
  },
  "bugs": {
    "url": "https://github.com/totvs/tds-languageclient/issues"
  },
  "homepage": "https://github.com/totvs/tds-languageclient#readme",
  "engines": {
    "node": ">= 8.0.0"
  },
  "main": "lib/src/index.js",
  "types": "typings/src/index.d.ts",
  "files": [
    "lib/",
    "typings/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf ./lib && rimraf ./typings",
    "build": "tsc --version && tsc -p .",
    "watch": "tsc -p . --watch",
    "prebuild": "npm run clean",
    "---TEST---": "",
    "test": "jest --detectOpenHandles --unhandled-rejections=strict",
    "test:p20": "npm run test -- --scenario=./tests/scenario_p20.json",
    "test:p19": "npm run test -- --scenario=./tests/scenario_p19.json",
    "test:snapshot": "npm run test:p20 -- --updateSnapshot",
    "test:single": "npm run test:p19 -- --testNamePattern \"validation\"",
    "test:coverage": "npm run test:p20 -- --coverage",
    "test:onlyFailures": "npm run test:p20 --onlyFailures ",
    "pretest": "npm run build",
    "---RELEASE---": "",
    "release": "npx standard-version",
    "git_push": "git push --follow-tags origin develop",
    "to_publish": "npm publish --access public",
    "prepack": "npm run build",
    "prepare": "npm run clean && npm run build",
    "---MISC---": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "contributors:check": "npx all-contributors-cli check",
    "contributors:generate": "npx all-contributors-cli generate",
    "link:": ""
  },
  "dependencies": {
    "@totvs/tds-ls": "^1.1.41",
    "vscode-jsonrpc": "^5.0.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "all-contributors-cli": "^6.20.0",
    "eslint": "^7.25.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.3",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintIgnore": [
    "lib/**",
    "typings/**"
  ],
  "jest": {
    "verbose": false,
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testTimeout": 300000,
    "slowTestThreshold": 20,
    "roots": [
      "./tests"
    ]
  }
}
